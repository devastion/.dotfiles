[alias]
	co = checkout
	ci = commit
	st = status
	about = "!describe() { msg=\"$1\"; git config branch.\"$(git rev-parse --abbrev-ref HEAD)\".description ${msg:+\"$msg\"}; }; describe"

[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto

[merge]
  tool = opendiff
  summary = true
  conflictstyle = diff3

[core]
  editor = nvim
  pager = delta
  excludesFile = ~/.config/git/ignore

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  side-by-side = true
  line-numbers = true
  hyperlinks = true

[diff]
  colorMoved = default
  algorithm = histogram

[branch]
  sort = -committerdate

[push]
  autoSetupRemote = true

