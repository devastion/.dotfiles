# window focus keybindings (bsp)
hyper - h: yabai -m window --focus west
hyper - j: yabai -m window --focus south || yabai -m window --focus stack.prev || yabai -m window --focus stack.last
hyper - k: yabai -m window --focus north || yabai -m window --focus stack.next || yabai -m window --focus stack.first
hyper - l: yabai -m window --focus east
lcmd - tab: yabai -m window --focus recent

# focus spaces
hyper - 1: yabai -m space --focus 1
hyper - 2: yabai -m space --focus 2
hyper - 3: yabai -m space --focus 3
hyper - 4: yabai -m space --focus 4
hyper - 5: yabai -m space --focus 5
hyper - a: yabai -m space --focus prev || yabai -m space --focus last
hyper - d: yabai -m space --focus next || yabai -m space --focus first

# switch focus between monitors
hyper - m: yabai -m display --focus next || yabai -m display --focus prev

# toggle window float
hyper - t: yabai -m window --toggle float --grid 12:12:1:1:10:10

# maximize window
hyper - f: yabai -m window --toggle zoom-fullscreen
