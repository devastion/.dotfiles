:: applications @ : borders active_color=0xff8ebd6b
hyper - o ; applications
applications < hyper - o ; default
applications < hyper - space ; yabai
applications < escape ; default

# browsers
applications < b: open -a "Brave Browser"; skhd -k "escape"
applications < lshift - b: open -n -a "Brave Browser"; skhd -k "escape"
applications < c: open -a "Google Chrome"; skhd -k "escape"
applications < lshift - c: open -n -a "Google Chrome"; skhd -k "escape"

# terminals
applications < a: open -a "Alacritty"; skhd -k "escape"
applications < lshift - a: open -n -a "Alacritty"; skhd -k "escape"
applications < i: open -a "iTerm"; skhd -k "escape"
applications < lshift - i: open -n -a "iTerm"; skhd -k "escape"

# social
applications < lctrl - d: open -a "Discord"; skhd -k "escape"
applications < lctrl - m: open -a "Messages"; skhd -k "escape"
applications < lctrl - b: open -a "Bear"; skhd -k "escape"
applications < lctrl - r: open -a "Reeder"; skhd -k "escape"

applications < lcmd - s: open -a "Slack"; skhd -k "escape"
applications < lcmd - m: open -a "Mail"; skhd -k "escape"
applications < lcmd - c: open -a "Calendar"; skhd -k "escape"

