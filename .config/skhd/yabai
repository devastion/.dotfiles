lctrl + lshift - h: yabai -m window --focus west
lctrl + lshift - j: yabai -m window --focus south || yabai -m window --focus stack.prev || yabai -m window --focus stack.last
lctrl + lshift - k: yabai -m window --focus north || yabai -m window --focus stack.next || yabai -m window --focus stack.first
lctrl + lshift - l: yabai -m window --focus east

lctrl + lshift + lalt - h: yabai -m window --swap west
lctrl + lshift + lalt - j: yabai -m window --swap south
lctrl + lshift + lalt - k: yabai -m window --swap north
lctrl + lshift + lalt - l: yabai -m window --swap east

lctrl + lshift + lcmd - h: yabai -m window --stack west --focus
lctrl + lshift + lcmd - j: yabai -m window --stack south --focus
lctrl + lshift + lcmd - k: yabai -m window --stack north --focus
lctrl + lshift + lcmd - l: yabai -m window --stack east --focus

lctrl - 1: yabai -m space --focus 1
lctrl - 2: yabai -m space --focus 2
lctrl - 3: yabai -m space --focus 3
lctrl - 4: yabai -m space --focus 4
lctrl - 5: yabai -m space --focus 5

lctrl + lshift - 1: yabai -m window --space 1 --focus
lctrl + lshift - 2: yabai -m window --space 2 --focus
lctrl + lshift - 3: yabai -m window --space 3 --focus
lctrl + lshift - 4: yabai -m window --space 4 --focus
lctrl + lshift - 5: yabai -m window --space 5 --focus

rctrl - h: yabai -m window --resize left:-20:0; yabai -m window --resize right:-20:0
rctrl - j: yabai -m window --resize bottom:0:20; yabai -m window --resize top:0:20
rctrl - k: yabai -m window --resize top:0:-20; yabai -m window --resize bottom:0:-20
rctrl - l: yabai -m window --resize right:20:0; yabai -m window --resize left:20:0

rctrl - c : yabai -m space --create && \
  index="$(yabai -m query --spaces --display | jq 'map(select(.["is-native-fullscreen"] == false))[-1].index')" && \
  yabai -m space --focus "${index}"; skhd -k "escape"
rctrl - x : yabai -m space --destroy; skhd -k "escape"

lalt - b : yabai -m space --balance; skhd -k "escape"
lalt - m: yabai -m display --focus next || yabai -m display --focus prev
lalt - t: yabai -m window --toggle float --grid 6:6:1:1:4:4
lalt - f: yabai -m window --toggle zoom-fullscreen

